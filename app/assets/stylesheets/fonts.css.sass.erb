@import "compass/css3/font-face"

ol.fonts
  li.font
    a
      font-size: 3em
      text-decoration: none

<% Font.all.each do |font| %>

@include font-face("<%= font.unix_name %>", font-files("<%= font.filename %>", <%= font.font_type %>))
.<%= font.unix_name %>
  font-family: <%= font.unix_name %>

<% end %>
