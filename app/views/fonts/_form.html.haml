= form_for @font do |f|
  -if @font.errors.any?
    #error_explanation
      %h2= "#{pluralize(@font.errors.count, "error")} prohibited this font from being saved:"
      %ul
        - @font.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :filename
    = f.text_field :filename
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :link
    = f.text_field :link
  .actions
    = f.submit 'Save'
